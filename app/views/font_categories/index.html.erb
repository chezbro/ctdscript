<h1>Listing font_categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Number of fonts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @font_categories.each do |font_category| %>
      <tr>
        <td><%= font_category.name %></td>
        <td><%= font_category.number_of_fonts %></td>
        <td><%= link_to 'Show', font_category %></td>
        <td><%= link_to 'Edit', edit_font_category_path(font_category) %></td>
        <td><%= link_to 'Destroy', font_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Font category', new_font_category_path %>
